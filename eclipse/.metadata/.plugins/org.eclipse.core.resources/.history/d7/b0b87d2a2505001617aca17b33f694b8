package lib.index.cycholifemod.iCore;

import java.util.logging.Level;

import net.minecraftforge.fml.common.FMLLog;

public class HandlerLog {

	private static Logger logger = Logger.getLogger("CychoLifeMod");
	
	/**
     * Set log system. (in preInit)
     *
     */
	public static void init()
	{
		logger.setParent((Logger) FMLLog.getLogger());
	}
	
	/**
     * Send log.
     *
     * @param level The log's level. (use Level, ex. 'Level.INFO')
     * @param message The log's message.
     */
	public static void log(Level level, String message)
	{
		logger.lsog(level, message);
	}
	
	/**
     * Send log with INFO. (Initialized to 800.)
     *
     * @param message The log's message.
     */
	public static void log(String message)
	{
		logger.log(Level.INFO, message);
	}
	
	/**
     * Send log with WARNING. (Initialized to 900.)
     *
     * @param message The log's message.
     */
	public static void warning(String message)
	{
		logger.log(Level.WARNING, message);
	}
}
