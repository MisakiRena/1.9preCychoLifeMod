package lib.index.cycholifemod.blocks.machine.bonfire;

import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.world.World;
import net.minecraftforge.fml.common.network.IGuiHandler;

public class CycAnalyzeGuiHandler implements IGuiHandler {

	public CycAnalyzeGuiHandler (){
		
	}
	
	@Override
	public Object getServerGuiElement(int ID, EntityPlayer player, World world, int x, int y, int z) {
		if(ID == 0){
			TileEntityCycAnalyze tileEntityFurnace = (TileEntityCycAnalyze) world.getTileEntity(x, y, z);
			return new ContainerCycAnalyze(player.inventory, tileEntityFurnace);
		}
		return null;
	}

	@Override
	public Object getClientGuiElement(int ID, EntityPlayer player, World world, int x, int y, int z) {
		if(ID == 0){
			TileEntityCycAnalyze tileEntityTestContainer = (TileEntityCycAnalyze) world.getTileEntity(x, y, z);
			return new GuiCycAnalyze(player.inventory, tileEntityTestContainer);
		}
		return null;
	}

}
